<style>
  .bg-lights {
    background-image: radial-gradient(
      68.54% 68.72% at 55.02% 31.46%,
      #d9d9d914 0,
      hsla(0, 0%, 11%, 0.02) 50%,
      hsla(0, 0%, 45%, 0) 80%
    );
  }
  .bg-lights-2 {
    background-image: radial-gradient(
      68.54% 68.72% at 55.02% 105.46%,
      #d9d9d914 0,
      hsla(0, 0%, 11%, 0.02) 50%,
      hsla(0, 0%, 45%, 0) 80%
    );
  }
</style>
