---

<Layout>

  <main
    class="bg-white min-h-screen text-black dark:bg-[#161616] dark:text-gray-300 transition-colors duration-300 pb-14 overflow-hidden"
  >
  
    <Header client:only="react"/>

    <div class="h-[40srem] w-full rounded-md flex md:items-center md:justify-center bg-black-[#161616] antialiased bg-grid-white/[0.02] relative overflow-hidden">
      <Spotlight
        className=""
        fill="white"
      />
      <!-- Hero Section -->
       <Hero />
      
    </div>

     

    <!-- Contact easy section -->
     <ContactBanner client:load/>

    <!-- About me section -->
    <AboutMe client:load/>

    <!-- Lenguage section -->
    <Lenguage />

    <!-- Services section -->
    <Services />

    <!-- Stack section -->
    <Stack client:visible/>

    <!-- Projects section -->
   <Projects />

    <!-- CTA section -->
    <Cta />

  </main>

    <Footer />
</Layout>

