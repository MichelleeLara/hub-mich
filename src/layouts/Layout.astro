---
import React from 'react';
import AnimatedTabs from '../components/Navbar';
import '@fontsource-variable/inter-tight';
// Supports weights 100-900
import '@fontsource-variable/inter';
import { Spotlight } from '../components/ui/Spotlight';
import Header from '../components/Header';
---
<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Mi Sitio Web</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Contenido Principal -->
    <!-- <Header client:only="react"/> -->

    <div id="main-content" class="flex-grow ">
      <Spotlight client:visible/>
      <slot />
    </div>
    
    <!-- Menú de Navegación Persistente -->
    <AnimatedTabs client:load />
    
  </body>
</html>

<style is:global>
   @font-face {
    font-family: 'Francy';
    src: url('../../src/fonts/Francy.woff2') format('woff2'),
         url('../../src/fonts/Francy.woff') format('woff'),
         url('../../src/fonts/Francy.ttf') format('truetype'),
         url('../../src/fonts/Francy.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
  font-family: 'ClashGrotesk-Semibold';
  src: url('../../src/fonts/ClashGrotesk-Semibold.woff2') format('woff2'),
       url('../../src/fonts/ClashGrotesk-Semibold.woff') format('woff'),
       url('../../src/fonts/ClashGrotesk-Semibold.ttf') format('truetype'),
       url('../../src/fonts/ClashGrotesk-Semibold.otf') format('opentype');
  font-weight: 600;
  font-display: swap;
  font-style: normal;
}
  @font-face {
  font-family: 'ClashGrotesk-Bold';
  src: url('../../src/fonts/ClashGrotesk-Bold.woff2') format('woff2'),
       url('../../src/fonts/ClashGrotesk-Bold.woff') format('woff'),
       url('../../src/fonts/ClashGrotesk-Bold.ttf') format('truetype'),
       url('../../src/fonts/ClashGrotesk-Bold.otf') format('opentype');
  font-weight: 700;
  font-display: swap;
  font-style: normal;
}
  @font-face {
  font-family: 'ClashDisplay';
  src: url('../../src/fonts/ClashDisplay-Semibold.woff2') format('woff2'),
       url('../../src/fonts/ClashDisplay-Semibold.woff') format('woff'),
       url('../../src/fonts/ClashDisplay-Semibold.ttf') format('truetype'),
       url('../../src/fonts/ClashDisplay-Semibold.otf') format('opentype');
  font-weight: 600; /* SemiBold */
  font-style: normal;
}
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: #161616;
    font-family: 'Inter Tight Variable', sans-serif;
    scroll-behavior: smooth;
  }

  html:not(.dark),
  html:not(.dark) body {
    background: #ffffff; /* fondo claro */
  }

  html.dark,
  html.dark body {
    background: #161616; /* fondo oscuro */
  }


  @view-transition{
  navigation: auto;
  }
</style>